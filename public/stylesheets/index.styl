@import url('https://fonts.googleapis.com/css?family=Source+Code+Pro:400,200,700')

// VARIABLES

// Colors
darker-grey = #111
dark-grey = #333
grey = #555
light-grey = #999
lightest-grey = #efefef

// Typography
main-coding = 'Source Code Pro'
main-serif = ''


// Headings
.section-header
  // text-align center
  h2
    font-family main-coding
    font-size 2em
    


// Sections
.outer-section
  margin-bottom 5em

header
  width 100%
  text-align center
  
  h2
    margin-left 1.5em
    font-family main-coding
    font-weight bold
    
  p
    font-style italic
    font-size 2em
    
#main-title
  margin-left 0
    
// NavBar

nav 
  #logo
    font-family main-coding
    margin-left 1em
    font-size 130%
    font-weight bold
    display none

#signup
  text-align right
  #signup-ul
    margin 0
    padding 0
    line-height 1em

    
    a 
      transition all 0.25s ease-in-out
      background none
      border none
      line-height 1em
    
    a:hover
      background #127DBF
      
    
#preview
  img
    width 100%
    
#clients
  img
    width 100%
    
